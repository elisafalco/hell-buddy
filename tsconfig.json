{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./app/src/*"],
      "@assets/*": ["./app/src/assets/*"],
      "@components/*": ["./app/src/components/*"]
    },
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
  },
  "include": [
    "app/src/**/*.ts",
    "app/src/**/*.d.ts",
    "app/src/**/*.tsx",
    "app/src/**/*.vue",
    "app/src/**/*.json"
  ],
}
